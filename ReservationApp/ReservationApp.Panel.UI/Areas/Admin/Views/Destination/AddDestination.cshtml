@model Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rota oluşturma Sayfası</h1>
<form method="post">
    <div class="form-group mb-3">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Kaç Gece Kaç Gün")
        <input type="text" asp-for="PeriodOfStay" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Ana Görsel")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="CoverImage" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="SecondImage" class="form-control" />
    </div>
    <div class="form-group mb-3">
        @Html.Label("Detay 1")
        <textarea cols="30" rows="5" class="form-control" asp-for="DetailUp"></textarea>
    </div>
    <div class="form-group mb-3">
        @Html.Label("Detay 2")
        <textarea cols="30" rows="5" class="form-control" asp-for="DetailsDown"></textarea>
    </div>
    <div class="form-group mb-3">
        @Html.Label("Açıklama")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <br />
    <button class="btn btn-outline-primary">Oluştur</button>
</form>

